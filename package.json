    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "chalk": "^5.3.0",
        "cookie-parser": "^1.4.7",
        "express": "^4.21.1",
        "js-yaml": "^4.1.0",
        "level": "^8.0.1",
        "logging": "github:The-Filefly-Project/logging",
        "node-forge": "^1.3.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.8",
        "@types/express": "^5.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^22.10.0",
        "@types/node-forge": "^1.3.11",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "chokidar-cli": "^3.0.0",
        "eslint": "^9.15.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.12.0",
        "postcss": "^8.4.49",
        "prettier": "^3.4.1",
        "prettier-plugin-tailwindcss": "^0.6.9",
        "sass-embedded": "^1.81.0",
        "tailwindcss": "^3.4.15",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.15.0",
        "vite": "^6.0.1"
    }
}
