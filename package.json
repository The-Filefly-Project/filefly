{
    "name": "filefly",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "c:dev": "vite",
        "c:build": "tsc -b && vite build",
        "c:lint": "eslint .",
        "c:preview": "vite preview",
        "s:dev": "tsc --watch --project ./server/",
